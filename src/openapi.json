{
  "openapi": "3.1.0",
  "info": {
    "title": "Polimoney Hub API",
    "version": "1.0.0",
    "description": "政治資金の透明化を推進する Polimoney プラットフォームの Hub API\n\n## 認証\n\n### API キー認証（公開 API）\n`X-API-Key` ヘッダーに API キーを設定してください。\n\n### Bearer トークン認証（管理者 API）\n`Authorization: Bearer <token>` ヘッダーに Supabase Auth のアクセストークンを設定してください。",
    "contact": {
      "name": "Polimoney Team",
      "url": "https://github.com/moai-redcap/polimoney_hub"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3722",
      "description": "ローカル開発環境"
    },
    {
      "url": "https://polimoney-hub.dd2030-topics.deno.net",
      "description": "本番環境"
    }
  ],
  "tags": [
    { "name": "Health", "description": "ヘルスチェック" },
    { "name": "Polimoney", "description": "Polimoney 向け収支データ API" },
    { "name": "Master", "description": "マスタデータ API" },
    { "name": "Sync", "description": "Ledger → Hub 同期 API" },
    { "name": "Unlock", "description": "ロック解除リクエスト API" },
    { "name": "Admin", "description": "管理者 API（Bearer トークン認証）" }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": ["Health"],
        "summary": "API 情報",
        "description": "API のバージョン情報とステータスを返します",
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string", "example": "Polimoney Hub" },
                    "version": { "type": "string", "example": "0.1.0" },
                    "status": { "type": "string", "example": "ok" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "ヘルスチェック",
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "healthy" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/polimoney/elections": {
      "get": {
        "tags": ["Polimoney"],
        "summary": "公開選挙一覧",
        "description": "収支データが公開されている選挙の一覧を取得します",
        "security": [{ "ApiKeyAuth": [] }],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "api_version": { "type": "string", "example": "v1" },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ElectionSummary"
                      }
                    },
                    "total_count": { "type": "integer", "example": 5 }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/polimoney/elections/{electionId}/journals": {
      "get": {
        "tags": ["Polimoney"],
        "summary": "選挙収支データ取得",
        "description": "指定した選挙の収支データを Polimoney JSON 形式で取得します",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "electionId",
            "in": "path",
            "required": true,
            "description": "選挙 ID (UUID)",
            "schema": { "type": "string", "format": "uuid" }
          },
          {
            "name": "politician_id",
            "in": "query",
            "required": false,
            "description": "政治家 ID（同じ選挙に複数候補者がいる場合は必須）",
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PolimoneyResponse" }
              }
            }
          },
          "400": {
            "description": "複数候補者が存在し politician_id が未指定",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string" },
                    "candidates": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "politician_id": { "type": "string" },
                          "ledger_id": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": { "description": "選挙または台帳が見つからない" }
        }
      }
    },
    "/api/v1/polimoney/elections/{electionId}/candidates": {
      "get": {
        "tags": ["Polimoney"],
        "summary": "選挙の候補者一覧",
        "description": "指定した選挙に出馬した候補者（収支データ公開済み）の一覧を取得します",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "electionId",
            "in": "path",
            "required": true,
            "description": "選挙 ID (UUID)",
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "api_version": { "type": "string" },
                    "election_id": { "type": "string" },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/CandidateSummary"
                      }
                    },
                    "total_count": { "type": "integer" }
                  }
                }
              }
            }
          },
          "404": { "description": "選挙が見つからない" }
        }
      }
    },
    "/api/v1/polimoney/ledgers/{ledgerId}/journals": {
      "get": {
        "tags": ["Polimoney"],
        "summary": "台帳 ID 指定でデータ取得",
        "description": "台帳 ID を直接指定して収支データを取得します",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "ledgerId",
            "in": "path",
            "required": true,
            "description": "台帳 ID (UUID)",
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PolimoneyResponse" }
              }
            }
          },
          "400": { "description": "選挙台帳以外は非対応" },
          "404": { "description": "台帳が見つからない" }
        }
      }
    },
    "/api/v1/master/account-codes": {
      "get": {
        "tags": ["Master"],
        "summary": "勘定科目一覧",
        "description": "政治資金規正法に準拠した勘定科目マスタを取得します",
        "security": [{ "ApiKeyAuth": [] }],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/AccountCode" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/master/election-types": {
      "get": {
        "tags": ["Master"],
        "summary": "選挙タイプ一覧",
        "description": "選挙タイプ（HR: 衆院選, HC: 参院選 等）のマスタを取得します",
        "security": [{ "ApiKeyAuth": [] }],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/ElectionType" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/master/municipalities": {
      "get": {
        "tags": ["Master"],
        "summary": "市区町村一覧",
        "description": "全国の市区町村マスタ（約 1,794 件）を取得します",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "prefecture",
            "in": "query",
            "required": false,
            "description": "都道府県名でフィルタ",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "成功"
          }
        }
      }
    },
    "/api/v1/master/prefectures": {
      "get": {
        "tags": ["Master"],
        "summary": "都道府県一覧",
        "description": "47 都道府県のマスタを取得します",
        "security": [{ "ApiKeyAuth": [] }],
        "responses": {
          "200": {
            "description": "成功"
          }
        }
      }
    },
    "/api/v1/master/public-subsidy-items": {
      "get": {
        "tags": ["Master"],
        "summary": "選挙公営費目一覧",
        "description": "選挙運動の公費負担対象となる費目マスタを取得します",
        "security": [{ "ApiKeyAuth": [] }],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/PublicSubsidyItem"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/master/metadata": {
      "get": {
        "tags": ["Master"],
        "summary": "マスタ更新日時",
        "description": "各マスタデータの最終更新日時を取得します",
        "security": [{ "ApiKeyAuth": [] }],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "account_codes": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "election_types": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "municipalities": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/sync/journals": {
      "post": {
        "tags": ["Sync"],
        "summary": "仕訳データ同期",
        "description": "Ledger から仕訳データを受け取り public_journals に保存します",
        "security": [{ "ApiKeyAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "journals": {
                    "type": "array",
                    "items": { "$ref": "#/components/schemas/SyncJournalInput" }
                  }
                },
                "required": ["journals"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/SyncResult" }
                  }
                }
              }
            }
          },
          "400": { "description": "バリデーションエラー" }
        }
      }
    },
    "/api/v1/sync/ledger": {
      "post": {
        "tags": ["Sync"],
        "summary": "台帳データ同期",
        "description": "Ledger から台帳データを受け取り public_ledgers を作成/更新します",
        "security": [{ "ApiKeyAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ledger": { "$ref": "#/components/schemas/SyncLedgerInput" }
                },
                "required": ["ledger"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "更新成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "type": "object" },
                    "action": { "type": "string", "enum": ["updated"] }
                  }
                }
              }
            }
          },
          "201": {
            "description": "作成成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "type": "object" },
                    "action": { "type": "string", "enum": ["created"] }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/sync/journals/{journal_source_id}": {
      "delete": {
        "tags": ["Sync"],
        "summary": "仕訳削除",
        "description": "Ledger 側で削除された仕訳を Hub からも削除します",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "journal_source_id",
            "in": "path",
            "required": true,
            "description": "Ledger 側の仕訳 ID",
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": { "description": "削除成功" }
        }
      }
    },
    "/api/v1/sync/journals/batch-delete": {
      "post": {
        "tags": ["Sync"],
        "summary": "仕訳一括削除",
        "description": "複数の仕訳を一括で削除します",
        "security": [{ "ApiKeyAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "journal_source_ids": {
                    "type": "array",
                    "items": { "type": "string", "format": "uuid" }
                  }
                },
                "required": ["journal_source_ids"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "deleted": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/sync/status": {
      "get": {
        "tags": ["Sync"],
        "summary": "同期ステータス確認",
        "description": "同期 API のヘルスチェックと統計情報を取得します",
        "security": [{ "ApiKeyAuth": [] }],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "ready" },
                    "message": { "type": "string" },
                    "stats": {
                      "type": "object",
                      "properties": {
                        "public_ledgers": { "type": "integer" },
                        "public_journals": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/sync/change-log": {
      "post": {
        "tags": ["Sync"],
        "summary": "変更ログ記録",
        "description": "台帳の変更履歴を記録します",
        "security": [{ "ApiKeyAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ledger_source_id": { "type": "string", "format": "uuid" },
                  "change_summary": { "type": "string" },
                  "change_details": { "type": "object" }
                },
                "required": ["ledger_source_id", "change_summary"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "作成成功" },
          "404": { "description": "台帳が見つからない" }
        }
      }
    },
    "/api/v1/unlock-requests": {
      "post": {
        "tags": ["Unlock"],
        "summary": "ロック解除リクエスト作成",
        "description": "年度締め済み台帳のロック解除をリクエストします",
        "security": [{ "ApiKeyAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateUnlockRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "作成成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/UnlockRequest" }
                  }
                }
              }
            }
          },
          "409": { "description": "既存の pending リクエストあり" }
        }
      },
      "get": {
        "tags": ["Unlock"],
        "summary": "ロック解除リクエスト一覧",
        "description": "ロック解除リクエストの一覧を取得します",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "description": "ステータスでフィルタ",
            "schema": {
              "type": "string",
              "enum": ["pending", "approved", "rejected"]
            }
          },
          {
            "name": "ledger_id",
            "in": "query",
            "description": "台帳 ID でフィルタ",
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/UnlockRequest" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/unlock-requests/{id}": {
      "get": {
        "tags": ["Unlock"],
        "summary": "ロック解除リクエスト詳細",
        "description": "ロック解除リクエストの詳細を取得します",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "$ref": "#/components/schemas/UnlockRequest" }
                  }
                }
              }
            }
          },
          "404": { "description": "見つからない" }
        }
      }
    },
    "/api/v1/unlock-requests/check/{ledger_id}": {
      "get": {
        "tags": ["Unlock"],
        "summary": "解除状態確認",
        "description": "特定の台帳のロック解除状態を確認します",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "ledger_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "is_unlocked": { "type": "boolean" },
                    "unlock_request": {
                      "$ref": "#/components/schemas/UnlockRequest"
                    },
                    "expires_at": { "type": "string", "format": "date-time" },
                    "pending_request": { "type": "object", "nullable": true }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/admin/election-requests": {
      "get": {
        "tags": ["Admin"],
        "summary": "選挙リクエスト一覧",
        "description": "選挙登録リクエストの一覧を取得します",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["pending", "approved", "rejected", "needs_info"]
            }
          }
        ],
        "responses": {
          "200": { "description": "成功" }
        }
      }
    },
    "/api/admin/election-requests/{id}/approve": {
      "put": {
        "tags": ["Admin"],
        "summary": "選挙リクエスト承認",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "area_code": {
                    "type": "string",
                    "description": "正式な選挙区コード"
                  },
                  "reviewed_by": { "type": "string" }
                },
                "required": ["area_code"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "承認成功" },
          "409": { "description": "選挙 ID が既に存在" }
        }
      }
    },
    "/api/admin/election-requests/{id}/reject": {
      "put": {
        "tags": ["Admin"],
        "summary": "選挙リクエスト却下",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "rejection_reason": { "type": "string" },
                  "reviewed_by": { "type": "string" }
                },
                "required": ["rejection_reason"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "却下成功" }
        }
      }
    },
    "/api/admin/organization-requests": {
      "get": {
        "tags": ["Admin"],
        "summary": "団体リクエスト一覧",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "status", "in": "query", "schema": { "type": "string" } }
        ],
