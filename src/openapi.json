  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key",
        "description": "API キー（開発用: dev_xxx, 本番用: prod_xxx）"
      },
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Supabase Auth アクセストークン"
      }
    },
    "schemas": {
      "PolimoneyResponse": {
        "type": "object",
        "description": "Polimoney JSON レスポンス",
        "properties": {
          "meta": { "$ref": "#/components/schemas/PolimoneyMeta" },
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/JournalEntry" }
          }
        }
      },
      "PolimoneyMeta": {
        "type": "object",
        "properties": {
          "api_version": { "type": "string", "example": "v1" },
          "politician": { "$ref": "#/components/schemas/Politician" },
          "election": { "$ref": "#/components/schemas/Election" },
          "summary": { "$ref": "#/components/schemas/Summary" },
          "generated_at": { "type": "string", "format": "date-time" }
        }
      },
      "Politician": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string", "example": "テスト太郎" },
          "name_kana": {
            "type": "string",
            "example": "テストタロウ",
            "nullable": true
          }
        }
      },
      "Election": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": {
            "type": "string",
            "example": "2024年 第50回衆議院議員総選挙"
          },
          "type": { "type": "string", "example": "HR" },
          "type_name": { "type": "string", "example": "衆議院議員選挙" },
          "district_id": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          },
          "district_name": {
            "type": "string",
            "example": "東京都第1区",
            "nullable": true
          },
          "election_date": {
            "type": "string",
            "format": "date",
            "example": "2024-10-27"
          }
        }
      },
      "Summary": {
        "type": "object",
        "properties": {
          "total_income": { "type": "integer", "example": 2500000 },
          "total_expense": { "type": "integer", "example": 2321859 },
          "balance": { "type": "integer", "example": 178141 },
          "public_expense_total": { "type": "integer", "example": 1135856 },
          "journal_count": { "type": "integer", "example": 37 }
        }
      },
      "JournalEntry": {
        "type": "object",
        "properties": {
          "data_id": { "type": "string", "format": "uuid" },
          "date": { "type": "string", "format": "date", "nullable": true },
          "amount": { "type": "integer", "example": 30605 },
          "category": { "type": "string", "example": "personnel" },
          "category_name": { "type": "string", "example": "人件費" },
          "type": { "type": "string", "example": "選挙運動" },
          "purpose": {
            "type": "string",
            "nullable": true,
            "example": "車上運動員報酬"
          },
          "non_monetary_basis": { "type": "string", "nullable": true },
          "note": { "type": "string", "nullable": true },
          "public_expense_amount": { "type": "integer", "nullable": true }
        }
      },
      "ElectionSummary": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "name": { "type": "string" },
          "type": { "type": "string" },
          "election_date": { "type": "string", "format": "date" },
          "district_id": { "type": "string", "nullable": true },
          "district_name": { "type": "string", "nullable": true }
        }
      },
      "CandidateSummary": {
        "type": "object",
        "properties": {
          "ledger_id": { "type": "string", "format": "uuid" },
          "politician": { "$ref": "#/components/schemas/Politician" },
          "summary": { "$ref": "#/components/schemas/Summary" }
        }
      },
      "AccountCode": {
        "type": "object",
        "properties": {
          "code": { "type": "string", "example": "EXP_PERSONNEL_ELEC" },
          "name": { "type": "string", "example": "人件費" },
          "type": { "type": "string", "example": "expense" },
          "report_category": { "type": "string", "example": "選挙運動費用" },
          "ledger_type": { "type": "string", "example": "election" },
          "polimoney_category": { "type": "string", "example": "personnel" }
        }
      },
      "ElectionType": {
        "type": "object",
        "properties": {
          "code": { "type": "string", "example": "HR" },
          "name": { "type": "string", "example": "衆議院議員選挙" },
          "description": { "type": "string" }
        }
      },
      "PublicSubsidyItem": {
        "type": "object",
        "properties": {
          "code": { "type": "string", "example": "POSTER" },
          "name": { "type": "string", "example": "選挙運動用ポスター" },
          "description": { "type": "string" }
        }
      },
      "SyncJournalInput": {
        "type": "object",
        "description": "Ledger から送信される同期データ",
        "properties": {
          "journal_source_id": {
            "type": "string",
            "format": "uuid",
            "description": "Ledger 側の仕訳 ID"
          },
          "ledger_source_id": {
            "type": "string",
            "format": "uuid",
            "description": "Ledger 側の台帳 ID"
          },
          "date": { "type": "string", "format": "date", "nullable": true },
          "description": {
            "type": "string",
            "nullable": true,
            "description": "摘要"
          },
          "amount": { "type": "integer" },
          "contact_name": {
            "type": "string",
            "nullable": true,
            "description": "関係者名（匿名化済み）"
          },
          "contact_type": { "type": "string", "nullable": true },
          "account_code": { "type": "string", "description": "勘定科目コード" },
          "classification": {
            "type": "string",
            "nullable": true,
            "enum": ["campaign", "pre-campaign"]
          },
          "non_monetary_basis": { "type": "string", "nullable": true },
          "note": { "type": "string", "nullable": true },
          "public_expense_amount": { "type": "integer", "nullable": true },
          "content_hash": {
            "type": "string",
            "description": "重複検知用ハッシュ"
          }
        },
        "required": [
          "journal_source_id",
          "ledger_source_id",
          "amount",
          "account_code",
          "content_hash"
        ]
      },
      "SyncLedgerInput": {
        "type": "object",
        "description": "Ledger から送信される台帳データ",
        "properties": {
          "ledger_source_id": { "type": "string", "format": "uuid" },
          "politician_id": { "type": "string", "format": "uuid" },
          "organization_id": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          },
          "election_id": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          },
          "fiscal_year": { "type": "integer" },
          "total_income": { "type": "integer" },
          "total_expense": { "type": "integer" },
          "journal_count": { "type": "integer" }
        },
        "required": [
          "ledger_source_id",
          "politician_id",
          "fiscal_year",
          "total_income",
          "total_expense",
          "journal_count"
        ]
      },
      "SyncResult": {
        "type": "object",
        "properties": {
          "created": { "type": "integer", "description": "作成された件数" },
          "updated": { "type": "integer", "description": "更新された件数" },
          "skipped": { "type": "integer", "description": "スキップされた件数" },
          "errors": { "type": "integer", "description": "エラー件数" },
          "error_details": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "journal_source_id": { "type": "string" },
                "error": { "type": "string" }
              }
            }
          }
        }
      },
      "CreateUnlockRequest": {
        "type": "object",
        "properties": {
          "ledger_id": { "type": "string", "format": "uuid" },
          "ledger_type": {
            "type": "string",
            "enum": ["election", "organization"]
          },
          "fiscal_year": {
            "type": "integer",
            "description": "organization の場合は必須"
          },
          "requested_by_user_id": { "type": "string", "format": "uuid" },
          "requested_by_email": { "type": "string", "format": "email" },
          "reason": { "type": "string", "minLength": 10 }
        },
        "required": [
          "ledger_id",
          "ledger_type",
          "requested_by_user_id",
          "requested_by_email",
          "reason"
        ]
      },
      "UnlockRequest": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "ledger_id": { "type": "string", "format": "uuid" },
          "ledger_type": {
            "type": "string",
            "enum": ["election", "organization"]
          },
          "fiscal_year": { "type": "integer", "nullable": true },
          "requested_by_user_id": { "type": "string", "format": "uuid" },
          "requested_by_email": { "type": "string", "format": "email" },
          "reason": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["pending", "approved", "rejected"]
          },
          "approved_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "approved_by": { "type": "string", "nullable": true },
          "unlock_expires_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "rejection_reason": { "type": "string", "nullable": true },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      },
      "AdminUser": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "email": { "type": "string", "format": "email" },
          "name": { "type": "string", "nullable": true },
          "role": { "type": "string", "enum": ["admin", "super_admin"] },
          "is_active": { "type": "boolean" },
          "created_at": { "type": "string", "format": "date-time" },
          "updated_at": { "type": "string", "format": "date-time" }
        }
      }
    }
  }
}
